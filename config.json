{
  "rules": {
    "panel_type": "volkovlabs-links-panel",
    "ignore_folders": ["Test", "TEMPLATES GL", "TEMPLATE GL DE", "Gas lift"],
    "ignore_dropdowns": true,
    "require_include_vars": true,
    "forbid_url_params_any": true,
    "link_targets": {
      "Executive": "Executive",
      "Benchmark": "Benchmark",
      "Status": "Daily ESP Status",
      "Shutdowns": "Shutdowns and Faults",
      "Production": "Production History",
      "Single-Axis": "Real Time: Single-Axis",
      "Multi-Axis": "Real Time: Multi-Axis",
      "Quick View": "Real Time: Quick View",
      "Health Check": "Health Check",
      "Setpoints": "Setpoints",
      "Reports": "Reports"
    }
  },
  "db": {
    "enabled": true,
    "host": "rds-test.cj8e8cqeonv7.us-east-2.rds.amazonaws.com",
    "port": 5432,
    "name": "postgres",
    "schema": "public",
    "user": "postgres"
  },
  "progress": { "bar_width": 46 },

  "output": {
    "write_json": true,
    "write_csv": true
  },

  "environments": [
    {
      "name": "qa",
      "grafana": {
        "url": "https://qa.enerview.site/api",
        "verify_ssl": true,
        "companies_file": "companies.qa.json",
        "dashboards": [
          "Benchmark",
          "Daily ESP Status",
          "Executive",
          "Health Check",
          "Production History",
          "Production Optimization",
          "Real Time: Quick View",
          "Real Time: Single-Axis",
          "Real Time: Multi-Axis",
          "Reports",
          "Setpoints",
          "Shutdowns and Faults"
        ],
        "names_filter": [
          "Executive",
          "Benchmark",
          "Production Optimization",
          "Status",
          "Shutdowns",
          "Production",
          "Single-Axis",
          "Multi-Axis",
          "Quick View",
          "Health Check",
          "Setpoints",
          "Reports"
        ]
      },
      "rules": {
        "mode": "LINKS"
      }
    },
    {
      "name": "dev",
      "grafana": {
        "url": "https://dev.enerview.site/api",
        "verify_ssl": true,
        "companies_file": "companies.dev.json",
        "dashboards": [
          "Benchmark",
          "Daily ESP Status",
          "Executive",
          "Health Check",
          "Production History",
          "Production Optimization",
          "Real Time: Multi-Axis",
          "Real Time: Quick View",
          "Real Time: Single-Axis",
          "Reports",
          "Setpoints",
          "Shutdowns and Faults"
        ],
        "names_filter": [
          "Executive",
          "Benchmark",
          "Production Optimization",
          "Status",
          "Shutdowns",
          "Production",
          "Single-Axis",
          "Multi-Axis",
          "Quick View",
          "Health Check",
          "Setpoints",
          "Reports"
        ]
      },
      "rules": {
        "mode": "PANEL_LINKS"
      }
    }
  ]
}
