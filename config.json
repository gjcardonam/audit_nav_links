  },
  "db": {
    "enabled": true,
    "host": "rds-test.cj8e8cqeonv7.us-east-2.rds.amazonaws.com",
    "port": 5432,
    "name": "postgres",
    "schema": "public",
    "user": "postgres",
    "password": "ENV_DB_PASSWORD"
  },
  "progress": { "bar_width": 46 },

  "output": {
    "write_json": true,
    "write_csv": true
  },

